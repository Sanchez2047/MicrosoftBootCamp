@model StudentViewModel

<h1>Edit</h1>
<form method="post" asp-controller="BootCamp" asp-action="Edit">

    <div class="form-group">
        <label asp-for="fName">First Name:</label>
        <span class="error" asp-validation-for="fName"></span>
        <input class="form-control" asp-for="fName" />
    </div>

    <div class="form-group">
        <label asp-for="lName">Last Name:</label>
        <span class="error" asp-validation-for="lName"></span>
        <input class="form-control" asp-for="lName" /><br />
    </div>

    <div class="form-group">
        <label asp-for="Career">Career:</label>
        <span class="error" asp-validation-for="Career"></span>
        <select class="form-control" asp-for="Career" asp-items="Model.StudentCareers"></select><br />
    </div>

    <div class="form-group">
        <label asp-for="JoinDate">JoinDate:</label>
        <span class="error" asp-validation-for="JoinDate"></span>
        <input class="form-control" asp-for="JoinDate"  /><br />
    </div>

    <input type="hidden" name="id" value="@Model.Id" />
    <input class="btn btn-primary" type="submit" value="Edit" /><br /><br />
    <a class="btn btn-success" asp-controller="BootCamp" asp-action="StudentInfo">Go Back</a>


</form>