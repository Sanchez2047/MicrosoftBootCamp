@model List<Student>

    <div class="">
        <form class="fullsearchbar" method="post" action="/BootCamp/SearchResults">
            <input id="search" class="form-control" type="text" name="search" placeholder="Enter Student First name or last name" />
            <input id="button" type="submit" name="search" />
        </form>
    </div>




<h1>List of all Students</h1>

@if (Model.Count == 0)
{
    <p>No records yet...</p>
}
else
{
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>#</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Career Path</th>
                <th>Join Date</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        @foreach (Student stdnt in Model)
        {
            <tr>
                <td>@stdnt.Id</td>
                <td>@stdnt.fName</td>
                <td>@stdnt.lName</td>
                <td>@stdnt.Career.ToString().Replace('_',' ')</td>
                <td>@stdnt.JoinDate</td>
                <td>| <a asp-controller="BootCamp" asp-action="Edit" asp-route-id="@stdnt.Id">Edit</a></td>
                <td>| <a asp-controller="BootCamp" asp-action="Delete" asp-route-id="@stdnt.Id">Delete</a></td>

            </tr>

        }
    </table>
}
